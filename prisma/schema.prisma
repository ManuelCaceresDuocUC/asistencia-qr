// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"  // <--- CAMBIO IMPORTANTE AQUÃ
  url      = env("DATABASE_URL")
}

enum EstadoAsistencia {
  A_BORDO
  EN_TIERRA
  PERMISO
  AUTORIZADO
}
model User {
  id          String   @id @default(uuid())
  nombre      String
  email       String?  @unique
  qrCode      String   @unique
  createdAt   DateTime @default(now())
  assistances Assistance[]
}

model Assistance {
  id            String   @id @default(uuid())
  timestamp     DateTime @default(now())
  evidenceUrl   String?
  // 2. Agregamos el campo de estado con valor por defecto
  estado        EstadoAsistencia @default(A_BORDO)
  
  userId        String
  user          User     @relation(fields: [userId], references: [id])
}