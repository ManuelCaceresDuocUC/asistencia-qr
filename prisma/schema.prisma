// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum EstadoAsistencia {
  A_BORDO
  EN_TIERRA
  PERMISO
  AUTORIZADO
  COMISION 
  CATEGORIA
  SIN_MARCAR
}

model User {
  id          String   @id @default(uuid())
  nombre      String
  // email    String?  <-- ESTA LÃNEA LA BORRAMOS
  qrCode      String   @unique
  createdAt   DateTime @default(now())
  assistances Assistance[]
}

model Assistance {
  id            String   @id @default(uuid())
  timestamp     DateTime @default(now())
  evidenceUrl   String?
  estado        EstadoAsistencia @default(A_BORDO)
  
  userId        String
  user          User     @relation(fields: [userId], references: [id])
  description   String?
}